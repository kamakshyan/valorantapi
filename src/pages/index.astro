---
import Layout from '../layouts/Layout.astro';
import AgentCard from '../components/AgentCard.astro';


const response = await fetch("https://valorant-api.com/v1/agents?isPlayableCharacter=true", {
	method: "GET",
    headers: {"Accept": "*/*"} 
}).then(res => res.json())

const agents = response.data;


---

<Layout title={"Valorant Agent Showcase"}>
	<main>
		<h1 class="text-center text-2xl my-5 font-bold">Valorant Agent Showcase</h1>
		<div class="flex flex-wrap gap-10 justify-center my-10">
			
			  {
				agents.map(agent => (
					<a href={`/agents/${agent.uuid}`}><AgentCard namae = {agent.displayName} uuid={agent.uuid} imgsrc={agent.fullPortrait} /></a>
				))
			  }
		</div>
	</main>
</Layout>
